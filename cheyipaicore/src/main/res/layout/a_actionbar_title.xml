<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actoinbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/btn_back_press"
        android:paddingRight="@dimen/dimen_5"
        android:scaleType="centerInside"
        android:src="@drawable/actionbar_back_orange"
        android:visibility="visible" />

    <TextView
        android:id="@android:id/title"
        style="@style/CheYiPai.TextAppearance.Style.Largest.CypOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLength="20"
        android:singleLine="true"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/ccp_attentoin_color" />

</RelativeLayout>
