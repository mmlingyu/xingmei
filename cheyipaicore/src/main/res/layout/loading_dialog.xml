<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_corners_background"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_loading_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dimen_25" />

        <ImageView
            android:id="@+id/iv_loading_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:src="@drawable/loading_error"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_loading_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25"
            android:src="@drawable/loading_success"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_loading_status"
            style="@style/CheYiPai.TextAppearance.Style.Big.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="@string/loading_status_desc" />

    </LinearLayout>

</LinearLayout>