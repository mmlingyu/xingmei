<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list> <!-- 相当于padding -->
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/smokeWhite" />
                    <corners android:radius="13dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list> <!-- SHADOW LAYER -->
            <item android:left="1dp" android:top="1dp">
                <shape> <solid android:color="#66000000" />
                    <corners android:radius="10dip"/>
                   <!-- <gradient android:startColor="#66000000" android:endColor="@color/smokeWhite"></gradient>-->
                </shape>
            </item> <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="1dp" >
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="0.2dp"
                        android:color="@color/carentry_gray"
                        />
                    <solid android:color="@color/hair_more_bg_paper" />
                    <corners android:radius="13dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>