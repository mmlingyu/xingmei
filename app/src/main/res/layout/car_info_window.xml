<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<include layout="@layout/common_head_no_phone"></include>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dip">
   <TextView
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:text="0次过户"
       android:gravity="center"
       style="@style/CheYiPai.TextAppearance.Middle.BLACK_333333"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:text="3万公里"
       style="@style/CheYiPai.TextAppearance.Middle.BLACK_333333"
       android:gravity="center"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:text="全4s保养"
       style="@style/CheYiPai.TextAppearance.Middle.BLACK_333333"
       android:gravity="center"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:text="价格适中"
       android:gravity="center"
       style="@style/CheYiPai.TextAppearance.Middle.BLACK_333333"
       android:layout_height="wrap_content" />
</LinearLayout>
   <ImageView
       android:layout_width="match_parent"
       android:src="@drawable/cyp_default"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_width="match_parent"
       android:background="@drawable/hair_item_press"
       android:text="车况好，品质车，稀缺车"
       style="@style/CheYiPai.TextAppearance.Middle.Orange_fc8825"
       android:layout_height="wrap_content" />
</LinearLayout>