<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_marginLeft="@dimen/dimen_13"
    android:layout_marginRight="@dimen/dimen_11"
    android:id="@+id/hair_ll"
    android:background="@color/white"
    android:layout_height="200dip"
    >
    <ImageView
        android:id="@+id/hair_mote_iv"
        android:layout_width="wrap_content"
        android:src="@mipmap/mote"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:drawablePadding="@dimen/dimen_6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/index_list_item_zan"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_20"
        android:text="58990"
        style="@style/CheYiPai.TextAppearance.Small.GRAY_999999"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:drawablePadding="@dimen/dimen_6"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/hair_girl_red"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="@string/girl"
        android:layout_marginRight="@dimen/dimen_15"
        style="@style/CheYiPai.TextAppearance.Small.GRAY_999999"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/face_tags_ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_height="45dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/index_list_item_tag"
            android:layout_height="wrap_content" />
        <com.cheyipai.ui.view.XCFlowLayout
            android:id="@+id/hair_tag_flowlayout"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.cheyipai.ui.view.XCFlowLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/hair_face_tv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:drawablePadding="@dimen/dimen_6"
        android:layout_above="@id/face_tags_ll"
        android:drawableLeft="@mipmap/hair_face"
        android:layout_marginBottom="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="@string/face_circle"
        android:layout_marginRight="@dimen/dimen_15"
        style="@style/CheYiPai.TextAppearance.Small.GRAY_999999"
        android:layout_height="wrap_content" />
</RelativeLayout>




