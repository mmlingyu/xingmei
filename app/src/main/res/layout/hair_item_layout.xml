<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleprogress="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_8"
    android:id="@+id/hair_ll"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_4"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/face_name_tv"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dimen_10"
        android:gravity="left|center_vertical"
        android:layout_gravity="left"
        android:text="@string/select_face"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_2"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_5"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="45dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/index_list_item_tag"
            android:layout_height="wrap_content" />
        <com.cheyipai.ui.view.XCFlowLayout
            android:id="@+id/hair_tag_flowlayout"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.cheyipai.ui.view.XCFlowLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:drawablePadding="@dimen/dimen_6"
        android:drawableLeft="@mipmap/index_list_item_zan"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_20"
        android:text="58990"
        style="@style/CheYiPai.TextAppearance.Small.GRAY_999999"
        android:layout_height="wrap_content" />
</LinearLayout>

    <ImageView

        android:layout_width="wrap_content"
        android:src="@mipmap/mote"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_7"
        android:layout_height="wrap_content" />
</LinearLayout>




